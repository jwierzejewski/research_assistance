<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Reaserch Assistance - Add Link</title>
</head>
<body>
{{#if loggedin}}
    <a href="/logout">Log out</a>
    <a href="/">Home</a>
    <form action="/addItemLink" method="post">
        <table>
            <tr>
                <td>title:</td>
                <td><input type="text" name="title"/></td>
            </tr>
            <tr>
                <td>author</td>
                <td><input type="text" name="author"/></td>
            </tr>
            <tr>
                <td>year:</td>
                <td><input type="number" name="year" min="1495" max="2024"/></td>
            </tr>
            <tr>
                <td>genre:</td>
                <td> <input type="text" name="genre"/></td>
            </tr>
            <tr>
                <td>category:</td>
                <td>
                    <select name="categoryId">
                        {{#each categories}}
                            <option value={{id}}>{{name}}</option>
                        {{/each}}
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    Link:
                </td>
                <td>
                    <input type="text" name="link"/>
                </td>
            </tr>
            <tr>
                <td>
                    <button type="submit">Add Item </button>
                </td>
            </tr>
        </table>
    </form>
{{/if}}

{{#if message}}
    <p>{{message}}</p>
{{/if}}


</body>
</html>